// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int     @default(autoincrement()) @id
  name          String?
  email         String  @unique
  password      String
  team          Team?
}

model Team{
  id            Int      @default(autoincrement()) @id
  user          User     @relation(fields: [teamId], references: [id])
  teamId        Int      @default(autoincrement())
  teamName      String?
  teamMembers   TeamMembers?
}

model TeamMembers {
  id            Int      @default(autoincrement()) @id
  heroId        Int
  teamMemberId  Int
  team          Team      @relation(fields: [teamMemberId], references: [id])
}
